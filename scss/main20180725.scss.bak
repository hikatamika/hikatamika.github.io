/* Variables */
$vert-margin: 4vh * (2 / 3);
$horz-margin: 4vw;
$inner-height: (100vh - ($vert-margin * 2));
$inner-width: (100vw - ($horz-margin * 2));
$ele-space: 1.250rem;

$star-bullet-font-height: 2.25rem;
$star-padding: 1.75rem;

$hika-bg: url('../img/hk-bg-tile.png');

/* CSS*/
body {
  background-image: $hika-bg;
  margin: $vert-margin $horz-margin $vert-margin $horz-margin;
  width: auto;
}

#site {
  margin: 0 auto;
}

#header {
  /* height: $inner-height * 1 / 3; */
  margin-bottom: $vert-margin;
}

#page {
  /*height: ($inner-height * 2 / 3) - $vert-margin;*/
  overflow: auto;
  margin-top: $vert-margin;
  margin-bottom: $vert-margin;
  /*height: 100vh - ($vert-margin * 2)*/
}

#logo-box {
  text-align: center;
  height: inherit;
}

.header-logo {
  margin: 0 auto;
}

.logo-full{
  max-height: 20vh;
  max-width: 100%;
  }

.logo-mobile{
  display:none;
 }

#cardbox {
  float: left;
  width: ($inner-width * 2 / 3) - ($horz-margin / 3);
  top: 0;
}

.cardimg {
  width: 100%;
}

#navbox {
  height: 100%;
  float: right;
  width: ($inner-width * 1 / 3) - ($horz-margin / 3);
  position: relative;
}

.nav-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

ul.star-links li{
   list-style: none;
   font-size: $star-bullet-font-height;
   margin-top: $star-padding;
   margin-bottom: $star-padding;
}

ul.star-links {
   list-style-type: none;
   margin: 0;
   padding: 0;
}

.star-bullets {
  display: inline;
  height: $star-bullet-font-height;
  vertical-align: middle;
  margin-right: 0.75rem;
}
